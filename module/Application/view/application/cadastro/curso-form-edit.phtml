<script type="application/javascript">

function validarLancamentoCadastrarCurso(form) {
    var nome = $('#nome').val();


    var temErro = false;
    var divMensagens = $('#divMensagens');
    var mensagem = '';
    var mensagemReal = '';

    if (nome === '') {

        temErro = true;
        if (mensagem == '') {
            mensagem = 'Nome';
        } else {
            mensagem += ', Nome';
        }
    }


    if (temErro) {
        mensagemReal = 'Preencha o(s) seguinte(s) campo(s): ' + mensagem;
        divMensagens
                .html(mensagemReal)
                .removeClass('alert-success')
                .removeClass('hidden')
                .addClass('alert-danger');
    } else {

        divMensagens
                .addClass('hidden');
        form.submit();
    }
}

</script>
